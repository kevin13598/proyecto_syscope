@model IEnumerable<SPC_Coopenae.UI.Areas.Mantenimientos.Models.Escala>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Escalas</h2>

<p>
    @Html.ActionLink("Registrar", "Registrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
 
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>

        <td>
            <a class="btn btn-success" href="@Url.Action("Detalles", new { id = item.IdEscala })">
                <span class="glyphicon glyphicon-list-alt" title="Detalle"></span>
            </a>

            <a class="btn btn-danger" href="@Url.Action("Eliminar", new { id = item.IdEscala })">
                <span class="glyphicon glyphicon-trash" title="Eliminar"></span>
            </a>
        </td>
    </tr>
}

</table>
