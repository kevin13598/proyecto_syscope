@model IEnumerable<SPC_Coopenae.UI.Models.TipoCambio>

@{
    ViewBag.Title = "Index";
}

<h2>Tipo de Cambio</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            ₡@Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                    </tr>
                }

            </table>
        </div>


        <div class="col-md-6">
            @using (Html.BeginForm("GuardarTipoCambio", "TipoCambio"))
            {
                <div class="form-group">
                    <input type="number" name="valor" id="valor" placeholder="Valor" class="form-control" required max="10000" min="50" />
                </div>

                <div class="form-group" id="contenedor-fecha">
                    <input type="text" class="form-control" id="fecha" name="fecha" placeholder="Fecha" required>
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>

            }
        </div>

    </div>





</div>


@section Styles {
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
}

@section scripts {
    @Scripts.Render("~/bundles/datepicker")
}
