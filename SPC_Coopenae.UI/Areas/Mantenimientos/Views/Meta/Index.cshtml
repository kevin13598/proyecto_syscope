@model IEnumerable<SPC_Coopenae.UI.Areas.Mantenimientos.Models.Metas.Meta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Metas</h2>

<p>
    @Html.ActionLink("Registrar nueva meta", "Registrar")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Escala)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>        
        <td>
            @Html.Encode((ViewBag.ListaEscala as SelectList).SingleOrDefault(x => int.Parse(x.Value) == item.Escala).Text)
        </td>         
        <td>
            <a class="btn btn-success" href="@Url.Action("Detalles", new { id = item.IdMeta })">
                <span class="glyphicon glyphicon-list-alt" title="Detalle"></span>
            </a>

            <a class="btn btn-danger" href="@Url.Action("Eliminar", new { id = item.IdMeta })">
                <span class="glyphicon glyphicon-trash" title="Eliminar"></span>
            </a>
        </td>
    </tr>
}

</table>
