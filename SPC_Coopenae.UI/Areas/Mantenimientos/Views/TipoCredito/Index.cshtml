@model IEnumerable<SPC_Coopenae.UI.Areas.Mantenimientos.Models.TipoCredito>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Tipos de Créditos</h2>

<p>
    @Html.ActionLink("Registrar nuevo tipo credito", "Registrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComisionDistinta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximoComision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SumaIDP)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @(item.ComisionDistinta == null ? "" : item.ComisionDistinta + "%")
        </td>
        <td>
            @(item.MaximoComision == null ? "":"₡")@(string.Format("{0:0,0.00}", item.MaximoComision))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SumaIDP)
        </td>
        <td>
            <a class="btn btn-default" href="@Url.Action("Editar", new { id = item.IdTipoCredito })">
                <span class="glyphicon glyphicon-pencil" title="Editar"></span>
            </a>

            <a class="btn btn-success" href="@Url.Action("Detalles", new { id = item.IdTipoCredito })">
                <span class="glyphicon glyphicon-list-alt" title="Detalle"></span>
            </a>

            <a class="btn btn-danger" href="@Url.Action("Eliminar", new { id = item.IdTipoCredito })">
                <span class="glyphicon glyphicon-trash" title="Eliminar"></span>
            </a>
        </td>
    </tr>
}

</table>
