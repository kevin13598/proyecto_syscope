@model IEnumerable<SPC_Coopenae.UI.Areas.Mantenimientos.Models.Ejecutivo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Ejecutivos</h2>

<p>
    @Html.ActionLink("Registrar nuevo ejecutivo", "Registrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UnidadNegocio)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>

            <td>
                @Html.Encode((ViewBag.listadoUnidadNegocio as SelectList).SingleOrDefault(x => int.Parse(x.Value) == item.UnidadNegocio).Text)
            </td>

            <td>
                <a class="btn btn-default" href="@Url.Action("Editar", new { id = item.Cedula })">
                    <span class="glyphicon glyphicon-pencil" title="Editar"></span>
                </a>

                <a class="btn btn-success" href="@Url.Action("Detalles", new { id = item.Cedula })">
                    <span class="glyphicon glyphicon-list-alt" title="Detalle"></span>
                </a> 

                <a class="btn btn-danger" href="@Url.Action("Eliminar", new { id = item.Cedula })">
                    <span class="glyphicon glyphicon-trash" title="Eliminar"></span>
                </a>

            </td>
        </tr>
    }

</table>
